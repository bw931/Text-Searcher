var text = "Word Word";
var myName = "Word";
var hits = [];

/*Searches text for "word"*/

for(var i = 0; i < text.length; i++) {
    if (text[i] === "B") {
        for(j=0; j < myName.length + i; j++) {
            hits.push(text[j]);
        }
    }
}

if(hits.length === 0) {
    console.log("Your name wasn't found");
    }
else {
    console.log(hits);
}
 /*Prints to console*/
